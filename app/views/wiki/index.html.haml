- provide :page_title,       t('.page_title')
- provide :meta_keywords,    t('.meta_keywords')
- provide :meta_description, t('.meta_description')
.row
  .panel.panel-default
    .panel-heading 
      %h3 Listing wiki
    .panel-body
      %table.table.table-striped.table-bordered.table-hover
        %tr
          %th Title
          %th Create at
          %th
          %th
          %th

        - @wiki.each do |wiki|
          %tr
            %td= wiki.title
            %td= wiki.created_at.to_date
            %td= link_to 'Show', wiki
            %td= link_to 'Edit', edit_wiki_path(wiki)
            %td= link_to 'Destroy', wiki, method: :delete, data: { confirm: 'Are you sure?' }

      %br
    .panel-footer
      = link_to 'Create new Wiki', new_wiki_path, class: 'btn btn-default'
